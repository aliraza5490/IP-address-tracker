  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
.main
  h3 IP Address Tracker
  form(action='#')
    input(type='text' id="query" placeholder='Search for any IP address or domain IP Address')
    button(type='submit' id='submit')
      svg(xmlns='http://www.w3.org/2000/svg' width='11' height='14')
        path(fill='none' stroke='#FFF' stroke-width='3' d='M2 1l6 6-6 6')
  .info
    .box
      h5.box-heading IP Address
      h4.box-text(id='ip') 192.212.174.101
    .line
    .box
      h5.box-heading Location
      h4.box-text(id='location') Brooklyn, NY 10001
    .line
    .box
      h5.box-heading Timezone
      h4.box-text(id='timezone') UTC -05:00
    .line
    .box
      h5.box-heading ISP
      h4.box-text(id='isp') SpaceX Starlink
#bg
#map
